generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  name      String
  level     Int    @default(0)
  money     Int    @default(0)
  health    Int    @default(3)
  maxHealth Int    @default(3)
  mana      Int    @default(3)
  maxMana   Int    @default(3)
  energy    Int    @default(3)
  maxEnergy Int    @default(3)

  strength     Int @default(0)
  constitution Int @default(0)
  perception   Int @default(0)
  dexterity    Int @default(0)
  intelligence Int @default(0)
  crafting     Int @default(0)
  magic        Int @default(0)
  medicine     Int @default(0)
  charisma     Int @default(0)
  marksman     Int @default(0)
}
